{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"downlevelIteration": true,
		"allowJs": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"payload/generated-types": ["./src/payload-types.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "build"],
	"ts-node": {
		"transpileOnly": true,
		"swc": true
	}
}
